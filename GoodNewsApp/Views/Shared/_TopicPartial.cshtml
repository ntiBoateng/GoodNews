
<div class="">

	<div class="flex gap-3">
			@foreach(var item in Model.Topics)
			{
			<a asp-controller="Home" asp-action="Topic" asp-route-id="@item.Id">
				<div class="centered-div uppercase text-md bg-gray-900 shadow border-2 text-white font-bold border-black rounded-md hover:bg-orange-500 hover:text-white py-2 px-4">
				<span class="m-12">@item.Name</span>
				</div>
			</a>
			}
		</div>
</div>

